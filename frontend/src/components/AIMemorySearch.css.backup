.ai-memory-search-panel {
  position: fixed;
  top: 0;
  right: 0;
  width: 600px;
  height: 100vh;
  background: white;
  box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #ecf0f1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-header h2 {
  margin: 0;
  font-size: 24px;
}

.close-button {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  font-size: 28px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.close-button:hover {
  background: rgba(255, 255, 255, 0.3);
}

.search-content {
  padding: 24px;
  flex: 1;
}

.search-description {
  color: #34495e;
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 20px;
  padding: 12px;
  background: #f8f9fa;
  border-radius: 8px;
}

.search-form {
  margin-bottom: 24px;
}

.search-input-container {
  display: flex;
  gap: 12px;
}

.search-input {
  flex: 1;
  padding: 14px 16px;
  border: 2px solid #ecf0f1;
  border-radius: 8px;
  font-size: 16px;
  font-family: inherit;
  transition: border-color 0.2s;
}

.search-input:focus {
  outline: none;
  border-color: #667eea;
}

.search-input:disabled {
  background: #f8f9fa;
  cursor: not-allowed;
}

.search-button {
  padding: 14px 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  white-space: nowrap;
}

.search-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.search-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.search-error {
  padding: 12px 16px;
  background: #fadbd8;
  color: #c0392b;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
}

.search-explanation {
  padding: 12px 16px;
  background: #d6eaf8;
  color: #2874a6;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
  line-height: 1.6;
  border-left: 4px solid #3498db;
}

.example-queries {
  margin-bottom: 24px;
}

.examples-label {
  font-size: 13px;
  color: #7f8c8d;
  margin-bottom: 12px;
  font-weight: 500;
}

.examples-grid {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.example-button {
  padding: 10px 14px;
  background: #f8f9fa;
  border: 1px solid #ecf0f1;
  border-radius: 6px;
  font-size: 13px;
  color: #34495e;
  cursor: pointer;
  text-align: left;
  transition: all 0.2s;
}

.example-button:hover:not(:disabled) {
  background: #e8f4f8;
  border-color: #3498db;
  color: #2874a6;
}

.example-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.search-results {
  margin-top: 24px;
}

.search-results h3 {
  margin: 0 0 16px 0;
  color: #2c3e50;
  font-size: 18px;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.result-card {
  background: white;
  border: 2px solid #ecf0f1;
  border-radius: 8px;
  padding: 16px;
  cursor: pointer;
  transition: all 0.2s;
}

.result-card:hover {
  border-color: #667eea;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
  transform: translateX(4px);
}

.result-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.result-type-icon {
  font-size: 20px;
  flex-shrink: 0;
}

.result-title {
  flex: 1;
  font-size: 16px;
  font-weight: 600;
  color: #2c3e50;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.result-action-badge {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  color: white;
  text-transform: capitalize;
  flex-shrink: 0;
}

.result-summary {
  color: #34495e;
  font-size: 14px;
  line-height: 1.6;
  margin: 0 0 12px 0;
}

.result-metadata {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  color: #7f8c8d;
  flex-wrap: wrap;
}

.match-reason {
  margin-top: 12px;
  padding: 10px;
  background: #f8f9fa;
  border-radius: 6px;
  font-size: 13px;
  color: #2c3e50;
  border-left: 3px solid #3498db;
}

.match-reason strong {
  color: #2874a6;
}

.no-results {
  padding: 40px 20px;
  text-align: center;
  color: #7f8c8d;
}

.no-results p {
  margin: 0;
  font-size: 14px;
}

@media (max-width: 768px) {
  .ai-memory-search-panel {
    width: 100%;
    right: 0;
  }

  .search-input-container {
    flex-direction: column;
  }

  .search-button {
    width: 100%;
  }
}

